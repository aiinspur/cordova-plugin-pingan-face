<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 可修改位置/大小/字体等， 不要修改id就可以了 -->

    <LinearLayout
        android:id="@+id/linear_first"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:orientation="vertical" >
        <ImageView 
            android:id="@+id/error_mark_iv"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_marginTop="30dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/eauth_error"
            />
        <TextView 
            android:id="@+id/error_prompt_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dip"
            android:text=""
            android:textColor="@color/red"
            android:textSize="25sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_second"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="8dip" >
        <Button 
            android:id="@+id/back_main2_btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/eauth_button_seletctor_register"
            android:text="@string/btn_back_main"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </LinearLayout>


</LinearLayout>